{
  "$schema": "http://json.schemastore.org/template",
  "author": "Thiago Chagas",
  "description": "Aplicação do tipo minimal API já configurada com extensões de arquitetura usando o net core 9 usando Arquitetura Slice com CQS",
  "classifications": [
    "ASP.NET Core",
    "Minimal API"
  ],
  "identity": "TemplateMinimalApi.Veste",
  "groupIdentity": "TemplateMinimalApi.Veste.Customs",
  "name": "Veste Minimal API Template",
  "shortName": "veste-minimal-api-slice-9",
  "sourceName": "VesteTemplateMinimalApi",
  "preferNameDirectory": true,
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "tests": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true"
    },
    "extensions": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!tests)",
          "exclude": [
            "VesteTemplateMinimalApi.Test/**/*"
          ]
        },
        {
          "condition": "(!extensions)",
          "exclude": [
            "VesteTemplateMinimalApi.Extensions/**/*"
          ]
        }
      ]
    }
  ]
}