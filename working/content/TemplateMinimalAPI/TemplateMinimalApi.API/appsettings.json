{
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": { "Application": "TemplateMinimalApi" }
  },
  "ApplicationInsights": {
    "LogLevel": {
      "Microsoft": "Error",
      "Microsoft.AspNetCore": "Error"
    }
  },
  "BaseConfiguration": {
    "StringConexaoBancoDeDados": ""
  },
  "DocumentationConfiguration": {
    "Descricao": "Descrição da API ",
    "Desenvolvedor": "desenvolvedor responsável",
    "RotaDocumentacao": "/docs",
    "NomeAplicacao": "Nome Da API",
    "TemAutenticacao": true
  },
  "ConnectionStrings": {
    "ApplicationInsights": ""
  },
  "EmailConfiguration": {
    "Destinatario": "",
    "Porta": 587,
    "Remetente": "",
    "Senha": "",
    "SMTP": "smtp.office365.com"
  },
  "ProblemDetailConfiguration": {
    "Title": "",
    "Detail": ""
  },
  "ResilienceConfiguration": {
    "QuantidadeDeRetentativas": 2,
    "FalhasPermitidas": 3,
    "DuracaoDoBreak": 30,
    "TempoDeTimeout": 10
  },
  "OpenTelemetry": {
    "OtlpEndpoint": "http://localhost:4317"
  }
}
